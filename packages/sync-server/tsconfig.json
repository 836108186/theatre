{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@theatre/utils/*": ["../utils/src/*"],
      "@theatre/app/*": ["../app/src/*"],
      "@theatre/core/*": ["../core/src/*"],
      "@theatre/core": ["../core/src/index.ts"]
    }
  },
  "references": [
    {"path": "../utils"},
    {"path": "../app"},
    {"path": "../saaz"},
    {"path": "../core"}
  ],
  "include": ["next-env.d.ts", "src/**/*", "devEnv/**/*", "prisma/seed.ts"],
  "exclude": ["node_modules"]
}
